@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString()?.ToLower();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString()?.ToLower();
}

<div class="col-md-3">
    <a href="@Url.Action("NewMessage", "Message")" class="btn btn-primary btn-block mb-3">Yeni Mesaj Oluştur</a>

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Seçenekler</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>

        <div class="card-body p-0">
            <ul class="nav nav-pills flex-column">

                @* İletişim *@
                <li class="nav-item">
                    <a href="@Url.Action("Index", "Contact")"
                       class="nav-link @(currentController == "contact" && currentAction == "index" ? "active" : "")">
                        <i class="fas fa-mail-bulk"></i> İletişim
                        <span class="badge bg-primary float-right">0</span>
                    </a>
                </li>

                @* Gelen Kutusu *@
                <li class="nav-item">
                    <a href="@Url.Action("Inbox", "Message")"
                       class="nav-link @(currentAction == "inbox" ? "active" : "")">
                        <i class="fas fa-inbox"></i> Gelen Mesajlar
                        <span class="badge bg-primary float-right">12</span>
                    </a>
                </li>

                @* Gönderilenler *@
                <li class="nav-item">
                    <a href="@Url.Action("Sendbox", "Message")"
                       class="nav-link @(currentAction == "sendbox" ? "active" : "")">
                        <i class="far fa-envelope"></i> Gönderilen Mesajlar
                    </a>
                </li>

                @* Taslaklar *@
                <li class="nav-item">
                    <a href="@Url.Action("Drafts", "Message")"
                       class="nav-link @(currentAction == "drafts" ? "active" : "")">
                        <i class="far fa-file-alt"></i> Taslaklar
                    </a>
                </li>

                @* Spam *@
                <li class="nav-item">
                    <a href="@Url.Action("SpamBox", "Message")"
                       class="nav-link @(currentAction == "spam" ? "active" : "")">
                        <i class="fas fa-filter"></i> Spam
                        <span class="badge bg-warning float-right">65</span>
                    </a>
                </li>

                @* Çöp Kutusu *@
                <li class="nav-item">
                    <a href="@Url.Action("Trash", "Message")"
                       class="nav-link @(currentAction == "trash" ? "active" : "")">
                        <i class="far fa-trash-alt"></i> Çöp Kutusu
                    </a>
                </li>

            </ul>
        </div>
    </div>
</div>
