
@{
    ViewBag.Title = "EditDraft";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>EditDraft</h2>

@model EntityLayer.Concrete.Message
@{
    ViewBag.Title = "Taslak Mesaj Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Taslak Mesaj Düzenle</h2>

@using (Html.BeginForm("EditDraft", "Message", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.MessageID)

    <div class="form-group">
        @Html.LabelFor(m => m.ReceiverMail)
        @Html.TextBoxFor(m => m.ReceiverMail, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ReceiverMail)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Subject)
        @Html.TextBoxFor(m => m.Subject, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Subject)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.MessageContent)  <!-- Modelindeki mesaj içeriği property ismi bu ise -->
        @Html.TextAreaFor(m => m.MessageContent, new { @class = "form-control", rows = 6 })
        @Html.ValidationMessageFor(m => m.MessageContent)
    </div>

    <button type="submit" name="submitButton" value="Taslakları Güncelle" class="btn btn-primary">Güncelle</button>
    <button type="submit" name="submitButton" value="Gönder" class="btn btn-success">Gönder</button>
    <a href="@Url.Action("Drafts", "Message")" class="btn btn-secondary">İptal</a>

}
